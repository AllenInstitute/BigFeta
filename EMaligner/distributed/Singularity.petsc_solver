Bootstrap: shub
From: AllenInstitute/EM_aligner_python:petsc 

%setup
    # singularity build should be run from repo base dir
    git clone --single-branch ./ ${SINGULARITY_ROOTFS}/EM_aligner_python

%post
    # variables from parent image
    . /sourceme

    cd /EM_aligner_python/EMaligner/distributed/

    make -f makefile_allen em_dist_solve

%runscript
    . /sourceme
    exec /EM_aligner_python/EMaligner/distributed/bin/em_dist_solve -help "$@"
